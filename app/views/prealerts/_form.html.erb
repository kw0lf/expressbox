<%= simple_form_for(@prealert) do |f| %>
  <%= f.error_notification %>
  <br />



<div class="form-group">
   <div class="col-lg-12">
   <div class="row">
      <div class="col-lg-5">
          <%= f.input :tracking_number,label: "Numero de tracking" %>
      </div>
      <div class="col-lg-5">
          <%= f.input :curier,collection: $courier,as: :select, label: "Compañia Courier", class:"form-control" %>
      </div>
    </div>
</div>
<br /
<div class="form-group">
   <div class="col-lg-12">
    <div class="row" >
      <div class="col-lg-5">
          <%= f.input :shop ,collection: $shop,as: :select, label: "Tienda donde compro", class:"form-control"%>
      </div>
      <div class="col-lg-5">
          <%= f.input :value_price ,label: "Valor del paquete(USD)", class:"form-control"%>
      </div>
    </div>
</div>
</div>
<div class="form-group">
   <div class="col-lg-12">

    <div class="row" >
      <div class="col-lg-10">
        <%= f.input :description, label: "Describe tu paquete", class:"form-control"%>
      </div>
    </div>
</div>
</div>

<br />
<header class="panel-heading">
  Agregar archivos que contienen la factura
</header>
<div class="form-group">

   <div class="col-lg-12">

      <br>


     <div class="row" >
      <div class="col-lg-3">
          <%= f.input :image, :as => :image_preview, :input_html => {:preview_version => :thumb},label: false  %>
          <%= f.check_box :remove_image %>Remover archivo
      </div>
      <div class="col-lg-3">
          <%= f.input :image2, :as => :image_preview, :input_html => {:preview_version => :thumb}, label: false  %>
          <%= f.check_box :remove_image2 %>Remover archivo
      </div>
    </div>
</div>
</div>


<div class="form-group">
   <div class="col-lg-12">

    <div class="row">
      <div class="col-lg-4">
        <%= f.button :submit, "#{f.object.new_record? ? 'Crear prealerta' : 'Actualizar prealerta'}", class:"btn btn-shadow btn-info" %>
        <% if !f.object.new_record? %>
          <%= link_to "Mostrar", @prealert , class: "btn btn-shadow btn-warning"%>
        <%end%>
        ó <%= link_to "Volver", prealerts_path %>
      </div>
    </div>
 </div>
 </div>




<% end %>
<br />
