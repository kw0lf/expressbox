<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>




<div class="container">
  <p class="text-center"><%= image_tag "logo.png", class: "logo"%>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name) ,html: { class: 'form-signin' }) do |f| %>
  <%= devise_error_messages! %>

  <h2 class="form-signin-heading">Accede Ahora </h2>
</h2>
    <div class="login-wrap">
       <%= render 'admins/shared/messages' %>


      <%= f.input :email, required: false, autofocus: true,label:false,  placeholder:'Correo del admin' %>
      <br />
      <%= f.input :password, required: false,label: false,placeholder:'********'  %>
      <%= f.button :submit, "entrar" ,class: "btn btn-lg btn-login btn-block"%>
          <%= render "admins/shared/links" %>
      </p>
    </div>
  <% end %>

</div>
