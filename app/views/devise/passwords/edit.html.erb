

<%= render "devise/shared/links" %>





<div class="container">
  <p class="text-center"><%= image_tag "logo.png", class: "logo"%>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'form-signin', method: :put }) do |f| %>
  <%= f.error_notification %>

  <h2 class="form-signin-heading">Cambiar tu clave de acceso </h2>
</h2>
    <div class="login-wrap">
       <%= render 'devise/shared/messages' %>
       Introduce el correo electronico con el cual te registraste
       <br />
  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>
  <br />
      <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>

      <%= f.button :submit, "Cambiar clave" ,class: "btn btn-lg btn-login btn-block"%>
      <%= render "devise/shared/links" %>
      </p>
    </div>
  <% end %>

</div>
